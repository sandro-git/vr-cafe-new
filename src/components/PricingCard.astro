---
import PricingText from "./PricingText.astro";

const { title, price, popular = false, type = "standard" } = Astro.props;

const text30min = [
  "30 min de jeu",
  "+ de 20 escapes games",
  " + de 10 jeux VR",
  " + de 10 jeux Free Roaming",
  "Pour tous les go√ªts de jeu",
  "Pour tous les √¢ges de 7 √† 77 ans",
];

const text1h = [
  "1h de jeu effectif",
  "+ de 20 escapes games",
  " + de 10 jeux VR",
  " + de 10 jeux Free Roaming",
  "Pour tous les go√ªts de jeu",
  "Pour tous les √¢ges de 7 √† 77 ans",
];

const textBirthday = [
  "25‚Ç¨ par personne",
  "1h de jeu VR par enfant",
  "Table mise √† disposition",
  "Apportez votre go√ªter et boissons",
  "Choix parmi tous nos jeux",
  "Encadrement et animation inclus",
];

const groupPrices = [
  { range: "1-2 personnes", price: "29‚Ç¨" },
  { range: "3-4 personnes", price: "27‚Ç¨" },
  { range: "5+ personnes", price: "25‚Ç¨" },
];
---

<div
  class={`relative w-full max-w-sm p-6 sm:p-8 rounded-2xl shadow-lg transition-all duration-300 hover:shadow-2xl ${
    type === "birthday"
      ? "bg-gradient-to-br from-pink-50 to-pink-100 dark:from-gray-800 dark:to-gray-900 border-2 border-pink-400 hover:scale-105"
      : popular
        ? "bg-gradient-to-br from-blue-50 to-purple-50 dark:from-gray-800 dark:to-gray-900 border-2 border-blue-500 md:scale-105 hover:scale-110"
        : "bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 hover:scale-105"
  }`}
>
  {
    popular && (
      <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
        <span class="bg-gradient-to-r from-blue-600 to-purple-600 text-white text-sm font-bold px-6 py-2 rounded-full shadow-lg whitespace-nowrap">
          ‚≠ê Meilleur choix
        </span>
      </div>
    )
  }
  <h2
    class={`text-center mb-4 text-5xl font-extrabold tracking-tight ${
      type === "birthday"
        ? "text-pink-600 dark:text-pink-400"
        : popular
          ? "text-blue-700 dark:text-blue-400"
          : "text-gray-900 dark:text-white"
    }`}
  >
    {type === "birthday" && "üéâ "}
    {title}
    {type === "birthday" && " üéÇ"}
  </h2>
  {
    type === "birthday" ? (
      <div class="mb-6">
        <div class="text-center">
          <span class="text-5xl md:text-6xl font-extrabold tracking-tight text-pink-600 dark:text-pink-400">
            {price}
          </span>
          <span class="text-3xl font-semibold text-pink-600 dark:text-pink-400">
            ‚Ç¨
          </span>
          <span class="ms-1 text-xl font-normal text-gray-500 dark:text-gray-400">
            /personne
          </span>
        </div>
      </div>
    ) : (
      <div class="flex flex-col text-gray-900 dark:text-white mb-4">
        {price === "25" && type === "standard" ? (
          <div class="mb-4">
            <div class="flex items-baseline justify-center mb-2">
              <span class="text-xl font-normal text-gray-500 dark:text-gray-400">
                et √† partir de:
              </span>
            </div>
            <div class="text-center mb-4">
              <span
                class={`text-5xl md:text-6xl font-extrabold tracking-tight ${
                  popular ? "text-blue-600 dark:text-blue-400" : ""
                }`}
              >
                {price}
              </span>
              <span
                class={`text-3xl font-semibold ${
                  popular ? "text-blue-600 dark:text-blue-400" : ""
                }`}
              >
                ‚Ç¨
              </span>
              <span class="ms-1 text-xl font-normal text-gray-500 dark:text-gray-400">
                /personne
              </span>
            </div>
            <div class="bg-blue-50 dark:bg-gray-700 rounded-lg p-3 text-sm">
              <p class="font-semibold text-gray-700 dark:text-gray-200 mb-2">
                Prix de groupe :
              </p>
              {groupPrices.map((item) => (
                <div class="flex justify-between items-center mb-1">
                  <span class="text-gray-600 dark:text-gray-300">
                    {item.range}
                  </span>
                  <span class="font-bold text-blue-600 dark:text-blue-400">
                    {item.price}/pers
                  </span>
                </div>
              ))}
            </div>
          </div>
        ) : (
          <div class="text-center">
            <div class="flex items-baseline h-8 mb-2" />
            <div>
              <span
                class={`text-5xl md:text-6xl font-extrabold tracking-tight ${
                  popular ? "text-blue-600 dark:text-blue-400" : ""
                }`}
              >
                {price}
              </span>
              <span
                class={`text-3xl font-semibold ${
                  popular ? "text-blue-600 dark:text-blue-400" : ""
                }`}
              >
                ‚Ç¨
              </span>
              <span class="ms-1 text-xl font-normal text-gray-500 dark:text-gray-400">
                /personne
              </span>
            </div>
          </div>
        )}
      </div>
    )
  }
  <ul role="list" class="space-y-5 my-7">
    {
      type === "birthday"
        ? textBirthday.map((text: string) => <PricingText text={text} />)
        : price === "25"
          ? text1h.map((text: string) => <PricingText text={text} />)
          : text30min.map((text: string) => <PricingText text={text} />)
    }
  </ul>
  <button
    id="booking"
    type="button"
    class={`font-bold rounded-lg text-base px-5 py-3 inline-flex justify-center w-full text-center transition-all duration-300 ${
      type === "birthday"
        ? "text-white bg-gradient-to-r from-pink-500 to-pink-600 hover:from-pink-600 hover:to-pink-700 focus:ring-4 focus:outline-none focus:ring-pink-300 shadow-lg hover:shadow-xl transform hover:scale-105"
        : popular
          ? "text-white bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 focus:ring-4 focus:outline-none focus:ring-purple-300 shadow-lg hover:shadow-xl transform hover:scale-105"
          : "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-200 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-900"
    }`}
    >R√©server maintenant</button
  >
</div>

<script>
  const button = document.querySelectorAll("#booking");
  button.forEach((btn) => {
    btn.addEventListener("click", () => (location.href = "/reservation"));
  });
</script>
