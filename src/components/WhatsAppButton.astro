---
// src/components/WhatsAppButton.astro - Version Tailwind CSS
const { 
  phoneNumber = "33671410695", // Remplacez par votre numéro (format international sans +)
  message = "Bonjour ! J'aimerais avoir des informations sur le VR Café.", 
  position = "fixed", // "fixed" pour flottant, "inline" pour intégré
  variant = "primary" // "primary", "secondary", "floating"
} = Astro.props;

// Construire l'URL WhatsApp
const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(message)}`;

// Classes Tailwind selon la variante
const getButtonClasses = (variant:String, position:String) => {
  // Classes de base communes
  const baseClasses = "inline-flex items-center justify-center gap-2 rounded-lg font-medium transition-all duration-200 hover:scale-105 focus:outline-none focus:ring-4 transform";
  
  if (position === "fixed") {
    return `${baseClasses} fixed bottom-6 right-6 z-50 w-14 h-14 bg-green-500 hover:bg-green-600 active:bg-green-700 text-white shadow-lg hover:shadow-xl focus:ring-green-300 dark:focus:ring-green-800`;
  }
  
  switch (variant) {
    case "primary":
      return `${baseClasses} px-6 py-3 bg-green-500 hover:bg-green-600 active:bg-green-700 text-white shadow-md hover:shadow-lg focus:ring-green-300 dark:focus:ring-green-800`;
    case "secondary":
      return `${baseClasses} px-6 py-3 border-2 border-green-500 text-green-500 hover:bg-green-500 hover:text-white active:bg-green-600 focus:ring-green-300 dark:border-green-400 dark:text-green-400 dark:hover:bg-green-400 dark:hover:text-gray-900`;
    case "floating":
      return `${baseClasses} w-16 h-16 bg-green-500 hover:bg-green-600 active:bg-green-700 text-white rounded-full shadow-lg hover:shadow-xl focus:ring-green-300 dark:focus:ring-green-800`;
    default:
      return `${baseClasses} px-6 py-3 bg-green-500 hover:bg-green-600 active:bg-green-700 text-white shadow-md hover:shadow-lg focus:ring-green-300 dark:focus:ring-green-800`;
  }
};

const buttonClasses = getButtonClasses(variant, position);
---

<a 
  href={whatsappUrl}
  target="_blank"
  rel="noopener noreferrer"
  class={buttonClasses}
  aria-label="Contacter via WhatsApp"
  id="whatsapp-button"
>
  <!-- Icône WhatsApp -->
  <svg 
    class={position === "fixed" ? "w-6 h-6" : "w-5 h-5"} 
    fill="currentColor" 
    viewBox="0 0 24 24"
    aria-hidden="true"
  >
    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.525 3.687"/>
  </svg>
  
  {position !== "fixed" && (
    <span class="font-medium">
      WhatsApp
    </span>
  )}
</a>

{position === "fixed" && (
  <style>
    /* Animation pulse pour le bouton flottant */
    @keyframes pulse-green {
      0%, 100% {
        box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.7);
      }
      50% {
        box-shadow: 0 0 0 10px rgba(34, 197, 94, 0);
      }
    }
    
    #whatsapp-button:hover {
      animation: pulse-green 1.5s infinite;
    }
    
    /* Responsive - masquer sur très petits écrans si nécessaire */
    @media (max-width: 320px) {
      #whatsapp-button {
        bottom: 1rem;
        right: 1rem;
        width: 3rem;
        height: 3rem;
      }
      #whatsapp-button svg {
        width: 1.25rem;
        height: 1.25rem;
      }
    }
  </style>
)}

<script>
  // Define gtag as a global function
  declare global {
    function gtag(...args: any[]): void;
  }

  // Analytics tracking et interaction
  document.addEventListener('DOMContentLoaded', function() {
    const whatsappButton = document.getElementById('whatsapp-button');
    
    if (whatsappButton) {
      // Tracking des clics
      whatsappButton.addEventListener('click', function() {
        // Google Analytics 4 (si configuré)
        if (typeof gtag !== 'undefined') {
          gtag('event', 'click', {
            event_category: 'Contact',
            event_label: 'whatsapp_floating_button',
            value: 1
          });
        }
        
        console.log('WhatsApp button clicked');
      });
      
      // Animation d'apparition au chargement de la page
      setTimeout(() => {
        whatsappButton.classList.add('animate-bounce');
        setTimeout(() => {
          whatsappButton.classList.remove('animate-bounce');
        }, 2000);
      }, 1000);
    }
  });
</script>