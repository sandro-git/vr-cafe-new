---
import { Image } from "astro:assets";
import vrcafe from "../assets/vrcafe.webp";
---

<Image
  loading="eager"
  fetchpriority="high"
  class="mx-auto h-auto max-w-full rounded-xl mt-8"
  src={vrcafe}
  alt="VR Café - Réalité virtuelle à Canet-en-Roussillon"
  widths={[320, 640, 768, 1024, 1280]}
  sizes="(max-width: 640px) 100vw, (max-width: 768px) 640px, (max-width: 1024px) 768px, 1024px"
  format="webp"
/>
