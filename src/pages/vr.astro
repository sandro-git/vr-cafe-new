---
import BaseLayout from "../layouts/BaseLayout.astro";
import Title from "../components/Title.astro";
---

<BaseLayout>
  <Title title="VR - Choisissez votre expérience" />

  <div class="container mx-auto px-4 py-12">
    <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      <!-- Escapes Games Card -->
      <a href="/escapes" class="group">
        <div
          class="bg-gradient-to-br from-blue-600 to-blue-800 rounded-lg shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 transform group-hover:scale-105"
        >
          <div
            class="p-8 text-center text-white h-64 flex flex-col items-center justify-center"
          >
            <div class="mb-4">
              <svg
                class="w-16 h-16 mx-auto"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h2 class="text-3xl font-bold mb-2">Escapes Games</h2>
            <p class="text-blue-100">Résolvez des énigmes et trouvez l'issue</p>
          </div>
        </div>
      </a>

      <!-- Jeux VR Card -->
      <a href="/jeux" class="group">
        <div
          class="bg-gradient-to-br from-purple-600 to-purple-800 rounded-lg shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 transform group-hover:scale-105"
        >
          <div
            class="p-8 text-center text-white h-64 flex flex-col items-center justify-center"
          >
            <div class="mb-4">
              <svg
                class="w-16 h-16 mx-auto"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 3H9a6 6 0 00-6 6v12a6 6 0 006 6h6a6 6 0 006-6V9a6 6 0 00-6-6z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 15a3 3 0 100-6 3 3 0 000 6z"></path>
              </svg>
            </div>
            <h2 class="text-3xl font-bold mb-2">Jeux VR</h2>
            <p class="text-purple-100">Vivez des aventures immersives</p>
          </div>
        </div>
      </a>
    </div>
  </div>
</BaseLayout>
